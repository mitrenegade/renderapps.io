!!!
%html
	%head
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
		%title= content_for?(:title) ? yield(:title) : 'RenderApps'
		%meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Renderapps'}"}
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
		%link{href: "https://fonts.googleapis.com/css?family=Lato:300,400,700|Raleway:300,400,500,700", rel:"stylesheet"}
	%body.static-body
		%nav.navbar.navbar-default.navbar-fixed-top
			= render 'layouts/navigation_static'
		%div{ style: 'margin-top: 50px'}
			= render 'layouts/messages'
		%div.hidden-sm-down
			= render 'calculator/nav_top'
		= yield
		= render 'layouts/footer'