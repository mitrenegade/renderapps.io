.container
  = link_to root_path, class: 'navbar-brand', style: 'color: white;' do
    = image_tag 'renderapps_logo2.png', style: 'height: 30px;'
  %ul.nav.navbar-nav
    %li.nav-item.active#nav-passion
      = link_to 'Our Passion', '#passion', class: 'nav-link fake-nav'
    %li.nav-item#nav-services
      = link_to 'Our Services', '#services', class: 'nav-link fake-nav'
    %li.nav-item#nav-why
      = link_to 'Why RenderApps', '#why-us', class: 'nav-link fake-nav'
  %ul.nav.navbar-nav.navbar-right{style: 'display:none'}
    = render 'layouts/navigation_links_right'
  / /.nav-collapse
